<Window
    x:Class="WPF_MVVM_SPA_Template.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_SPA_Template"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel>
        <!--  Barra de navegació lateral estil SPA amb ListBox  -->
        <ListBox
            Width="100"
            Background="#2C3E50"
            BorderThickness="0"
            DockPanel.Dock="Left"
            Foreground="White"
            SelectedValue="{Binding SelectedView, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ListBoxItem
                Padding="10"
                HorizontalContentAlignment="Left"
                Content="Inici"
                FontSize="16"
                Style="{StaticResource ModernSidebarStyle}"
                Tag="IniciTag" />
            <ListBoxItem
                Padding="10"
                HorizontalContentAlignment="Left"
                Content="Clients"
                FontSize="16"
                Style="{StaticResource ModernSidebarStyle}"
                Tag="ClientsTag" />
            <ListBoxItem
                Padding="10"
                HorizontalContentAlignment="Left"
                Content="About us"
                FontSize="16"
                Style="{StaticResource ModernSidebarStyle}"
                Tag="About_usTag" />
        </ListBox>
        <!--  Secció de contingut dinàmic (Grid)  -->
        <Grid
            Name="MainContent"
            Margin="10"
            Background="White">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </DockPanel>
</Window>
