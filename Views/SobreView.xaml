<UserControl
    x:Class="WPF_MVVM_SPA_Template.Views.SobreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_SPA_Template.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:SobreViewModel />
    </UserControl.DataContext>

    <Grid Margin="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#2C3E50"
                Text="{Binding Titulo}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Width="71"
                Margin="72,63,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#2C3E50"
                Text="Fet per:" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Width="176"
                Margin="72,107,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                FontWeight="Normal"
                Foreground="#2C3E50"
                Text="{Binding Autor1}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Width="122"
                Margin="72,135,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                FontWeight="Normal"
                Foreground="#2C3E50"
                Text="{Binding Autor2}" />
        </Grid>
    </Grid>
</UserControl>