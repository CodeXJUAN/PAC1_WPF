<UserControl
    x:Class="WPF_MVVM_SPA_Template.Views.ClientsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_SPA_Template.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Clients}"
            SelectedItem="{Binding SelectedClients}"
            SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Id}"
                    Header="Id" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DNI}"
                    Header="DNI" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Nom}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cognoms}"
                    Header="Cognoms" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Email" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Telefon}"
                    Header="Telefon" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DataAlta}"
                    Header="Data Alta" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Padding="10,5"
                Command="{Binding DelClientsCommand}"
                Content="Afegir Clients"
                IsEnabled="{Binding SelectedClients}"
                Style="{StaticResource ModernSecundaryButtonStyle}" />
            <Button
                Margin="5"
                Padding="10,5"
                Background="#2C3E50"
                Command="{Binding AddClientsCommand}"
                Content="Mostrar Rendiment"
                Style="{StaticResource ModernPrimaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
