<UserControl
    x:Class="WPF_MVVM_SPA_Template.Views.FormulariView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_SPA_Template.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  ID  -->
        <TextBlock
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="ID:" />
        <TextBlock
            Name="txtID"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Client.Id}" />

        <!--  DNI  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="DNI:" />
        <TextBox
            Name="txtDNI"
            Grid.Row="1"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.DNI, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding DNIError}"
            TextWrapping="Wrap" />

        <!--  Nom  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Nom:" />
        <TextBox
            Name="txtNombre"
            Grid.Row="3"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.Nom, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding NomError}"
            TextWrapping="Wrap" />

        <!--  Cognoms  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Height="20"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Cognoms:" />
        <TextBox
            Name="txtApellidos"
            Grid.Row="5"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.Cognoms, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding CognomsError}"
            TextWrapping="Wrap" />

        <!--  Email  -->
        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Email:" />
        <TextBox
            Name="txtEmail"
            Grid.Row="7"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.Email, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="8"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding EmailError}"
            TextWrapping="Wrap" />

        <!--  Telèfon  -->
        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Telèfon:" />
        <TextBox
            Name="txtTelefono"
            Grid.Row="9"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.Telefon, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="10"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding TelefonError}"
            TextWrapping="Wrap" />

        <!--  Data Alta  -->
        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Data Alta:" />
        <DatePicker
            Name="dpFechaAlta"
            Grid.Row="11"
            Grid.Column="1"
            Height="30"
            Text="{Binding Client.DataAlta, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
        <TextBlock
            Grid.Row="12"
            Grid.Column="1"
            Margin="10,0,10,10"
            Foreground="Red"
            Text="{Binding DataAltaError}"
            TextWrapping="Wrap" />

        <!--  Botones  -->
        <StackPanel
            Grid.Row="12"
            Grid.Column="1"
            Margin="0,5,33,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal" Grid.RowSpan="2">
            <Button
                Width="99"
                Height="40"
                Margin="5"
                Background="#2C3E50"
                Command="{Binding GuardarCommand}"
                Content="Guardar"
                Foreground="White" />
            <Button
                Width="99"
                Height="40"
                Margin="5"
                Background="DarkRed"
                Command="{Binding CancelarCommand}"
                Content="Cancel·lar"
                Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>