<UserControl
    x:Class="WPF_MVVM_SPA_Template.Views.FormulariView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_SPA_Template.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Margin="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="ID:" />
        <TextBlock
            Name="txtID"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Text="{Binding Id}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Nom:" />
        <TextBox
            Name="txtNombre"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Height="20"
            Margin="20,0,20,0"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Cognoms:" />
        <TextBox
            Name="txtApellidos"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="DNI:" />
        <TextBox
            Name="txtDNI"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Email:" />
        <TextBox
            Name="txtEmail"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Telèfon:" />
        <TextBox
            Name="txtTelefono"
            Grid.Row="5"
            Grid.Column="1"
            Margin="5" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="20"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Text="Data Alta:" />
        <DatePicker
            Name="dpFechaAlta"
            Grid.Row="6"
            Grid.Column="1"
            Margin="5" />

        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Margin="265,0,0,1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="5"
                Background="#2C3E50"
                Content="Guardar"
                Foreground="White" />
            <Button
                Width="80"
                Margin="5"
                Background="DarkRed"
                Content="Cancel·lar"
                Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>
